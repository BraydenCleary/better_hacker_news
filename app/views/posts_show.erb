<br>
<%= @post.title %>

<form action='/posts/<%= @post.id %>/comments' method='post' id="new-comment">

  <textarea rows="4" cols="100" name='body' placeholder='Comment' required></textarea>
  
  <input type='submit' value='Submit'>
</form>

<ol>
<% @comments.each do |comment| %>
  <li><%= comment.body %></li>
<% end %>
</ol>
